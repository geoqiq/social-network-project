<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="300.0" prefWidth="400.0" style="-fx-background-color: #f0f8ff;" xmlns="http://javafx.com/javafx/19.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.retea.controller.InregistrareController">
    <children>
        <VBox alignment="CENTER" spacing="20.0" layoutX="50.0" layoutY="30.0" prefHeight="240.0" prefWidth="300.0">
            <children>
                <Label alignment="CENTER" text="Creati un cont!" textAlignment="CENTER" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
                <GridPane hgap="10" vgap="15">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="175.0" />
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    </rowConstraints>
                    <children>
                        <Label text="Prenume:" />
                        <TextField fx:id="inputPrenume" GridPane.columnIndex="1" />
                        <Label text="Nume:" GridPane.rowIndex="1" />
                        <TextField fx:id="inputNumeFam" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                        <Label text="Nume de utilizator:" GridPane.rowIndex="2" />
                        <TextField fx:id="inputNumeUtil" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                        <Label text="Parola:" GridPane.rowIndex="3" />
                        <PasswordField fx:id="inputParola" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                        <Label text="Confirma parola:" GridPane.rowIndex="4" />
                        <PasswordField fx:id="inputParola2" GridPane.columnIndex="1" GridPane.rowIndex="4" />
                    </children>
                </GridPane>
                <Button fx:id="butonSInregistrare" mnemonicParsing="false" onAction="#handleUserPanelClicks" prefHeight="26.0" prefWidth="200.0" text="Inregistrare" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" />
            </children>
        </VBox>
    </children>
</AnchorPane>